@using ASP.Server.Model

@model IEnumerable<Genre>
@{
    ViewData["Title"] = "Liste Genre";
}

<style>

.row{
    display: block;

}

.element-list{
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    justify-items: center;
    align-items: center;
    margin-bottom:25px;
    height: 50px;
}

h1{
    font-family: 'Century Gothic';
    letter-spacing: 2px;
    margin: 45px;
}

h3 {
    background-color: #e9e9e9;
    padding-left: 20px;
    padding-right: 20px;
    padding-top: 10px;
    padding-bottom: 10px;
    border-radius: 30px;
    font-family: 'Century Gothic';
    font-size: 23px
    
}

p{

    font-family: 'Century Gothic';
    margin: 0px;
    padding: 0px;

}

</style>

<div class="listeGenres">

    <div style="text-align: center;">
        <h1>LISTE DES GENRES</h1>
    </div>

    <div class="row">

        <div class="element-list">
            <h3>IDENTIFIANT</h3>
            <h3>NOM</h3>
            <h3>LIVRE ASSOCIES</h3>
        </div>

        @foreach (var genre in Model)
        {
            <div class="element-list">
                <P>@(genre.Id)</P>
                <P>@(genre.Nom)</P>
                <div>
                    @foreach (var book in genre.Book)
                    {
                        <p>@book.Nom</p>
                    }
                </div>
            </div>
        }

    </div>

</div>


